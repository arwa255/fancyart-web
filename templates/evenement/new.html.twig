{% extends 'base.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
<div class="container">
<h1 class="my-4">Create new Evenement</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nomevent, 'Event Name') }}
                {{ form_widget(form.nomevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.adresseevent, 'Address') }}
                {{ form_widget(form.adresseevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.capaciteevent, 'Capacity') }}
                {{ form_widget(form.capaciteevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.nbrticketdispo, 'Number of Available Tickets') }}
                {{ form_widget(form.nbrticketdispo, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.datedebutevent, 'Start Date') }}
                {{ form_widget(form.datedebutevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.datefinevent, 'End Date') }}
                {{ form_widget(form.datefinevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.descriptionevent, 'Description') }}
                {{ form_widget(form.descriptionevent, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
    {{ form_label(form.prixentre, 'Ticket Price') }}
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">&#x62f;.&#x62f;</span> <!-- Dinar sign -->
        </div>
        {{ form_widget(form.prixentre, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>


            <div class="form-group">
                {{ form_label(form.image1, 'Event Image') }}
                {{ form_widget(form.image1, {'attr': {'class': 'form-control-file'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Create</button>

            {{ form_end(form) }}
        </div>
    </div>

    <div class="text-center my-4">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}