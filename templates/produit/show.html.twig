{% extends 'front.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container-fluid tm-container-content tm-mt-60">
        <div class="row mb-4">
            <h2 class="col-12 tm-text-primary">Produit</h2>
        </div>
        <div class="row tm-mb-90">
            <div class="col-xl-8 col-lg-7 col-md-6 col-sm-12">
                <img src="{{ asset('Upload/')}}{{ produit.image }}" alt="Image" class="img-fluid">
            </div>
            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
                <div class="tm-bg-gray tm-video-details">
                    <div class="mb-4">

                        <h3 class="tm-text-gray-dark mb-3">Nom</h3>
                        <p>{{ produit.nom }}</p>

                        <h3 class="tm-text-gray-dark mb-3">Description</h3>
                        <p>{{ produit.description }}</p>
                        <h3 class="tm-text-gray-dark mb-3">Prix</h3>
                        <p>{{ produit.Prix }}</p>
                        <h3 class="tm-text-gray-dark mb-3">Categorie</h3>
                        <p>{{ produit.idCategorie.type }}</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
