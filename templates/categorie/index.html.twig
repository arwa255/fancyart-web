{% extends 'back.html.twig' %}

{% block title %}Categorie List{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.type }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('app_categorie_delete', {'id': categorie.id}) }}">Delete</a>
                    <a class="btn btn-primary"href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
